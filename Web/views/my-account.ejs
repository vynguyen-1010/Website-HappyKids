<%- include ('header') %>


    <!-- content my account -->

    <div class="content-my-account">
        <div class="container">
            <div class="row">
                <div class="col-sm-4" style="width: 100%;
                height: 300px;display:  flex; justify-content: center; align-items: center;">
                    <div class="avatar mt-3" >
                        <img style="border-radius: 50%; width: 200px; height: 200px; border: 1px solid gray; " src="./images/1.png" alt="">
                    </div>
                </div>
                <div class="col-sm-8 mt-5">
                    <div class="big-title" style="font-size: var(--size-title);">My Account</div>
                    <p style="font-size: 13px;">View and edit your personal info below.</p>
                    <hr>
                    <div class="form-group mt-5">
                      <label style="display: block;" for="email">Your Email</label>
                      <input style="display: inline-block; width: 90%;" type="email" class="form-control" name="email" id="" aria-describedby="emailHelpId" placeholder="vynguyen10@gmail.com">
                      <button style="border: 1px solid gray; border-radius: 50%; width: 25px; height: 25px; background-color: white;" type="" class="ml-2" data-toggle="tooltip" data-placement="top" title="Your email login can't be changed">
                          i
                      </button>
                    </div>
                    <div class="form-group">
                      <label for="first-name">First Name</label>
                      <input style="width: 90%;" type="text" class="form-control" name="first-name" id="" aria-describedby="helpId" placeholder="">
                    </div>
                    <div class="form-group">
                      <label for="last-name">Last Name</label>
                      <input style="width: 90%;" type="text" class="form-control" name="last-name" id="" aria-describedby="helpId" placeholder="">
                    </div>
                    <div class="form-group">
                      <label for="phone">Phone</label>
                      <input style="width: 90%;" type="text" class="form-control" name="phone" id="" aria-describedby="helpId" placeholder="">
                    </div>
                    <button style="width: 45%; margin: auto; background-color: var(--color-button);" type="submit" class="btn btn-primary mt-5 pt-2 pb-2">Update Info</button>

                    
                </div>
            </div>
        </div>
    </div>

    <!-- end content my account -->
<%- include ('footer') %>